<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许明文传输到我们的服务器 -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">60.205.145.35</domain>
    </domain-config>
    
    <!-- 允许支付宝相关域名的明文传输（生产环境通常使用HTTPS，但为了兼容性仍然保留） -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">openapi.alipay.com</domain>
        <domain includeSubdomains="true">mapi.alipay.com</domain>
        <domain includeSubdomains="true">mclient.alipay.com</domain>
        <domain includeSubdomains="true">mobilegw.alipay.com</domain>
        <domain includeSubdomains="true">alipay.com</domain>
    </domain-config>
    
    <!-- 默认配置：其他域名仍然要求HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config> 